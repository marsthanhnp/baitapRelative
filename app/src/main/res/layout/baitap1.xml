<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/t4"
        android:text="4"
        android:background="#8BC34A"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@+id/t4"
        android:layout_toLeftOf="@+id/t4"
        android:id="@+id/t3"
        android:text="3"
        android:background="#CDDC39"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/t4"
        android:layout_toLeftOf="@+id/t4"
        android:id="@+id/t5"
        android:text="5"
        android:background="#FFC107"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/t5"
        android:layout_toLeftOf="@+id/t5"
        android:id="@+id/t6"
        android:text="6"
        android:background="#FF9800"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/t6"
        android:layout_toLeftOf="@+id/t6"
        android:id="@+id/t7"
        android:text="7"
        android:background="#FF5722"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@+id/t3"
        android:layout_toLeftOf="@+id/t3"
        android:id="@+id/t2"
        android:text="2"
        android:background="#4CAF50"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@+id/t2"
        android:layout_toLeftOf="@+id/t2"
        android:id="@+id/t1"
        android:text="1"
        android:background="#009688"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>