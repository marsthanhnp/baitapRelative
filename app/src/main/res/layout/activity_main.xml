<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tBlue"
        android:background="#2196F3"
        android:textColor="#F8F5F5"
        android:layout_centerInParent="true"
        android:text="Blue"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tGreen"
        android:layout_alignLeft="@+id/tBlue"
        android:layout_above="@+id/tBlue"
        android:background="#4CAF50"
        android:textColor="#F8F5F5"
        android:layout_centerInParent="true"
        android:text="Green"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@+id/tBlue"
        android:layout_above="@+id/tGreen"
        android:background="#FF5722"
        android:textColor="#F8F5F5"
        android:layout_centerInParent="true"
        android:text="Red"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tOrange"
        android:background="#FF9800"
        android:textColor="#F8F5F5"
        android:layout_below="@+id/tBlue"
        android:layout_alignLeft="@+id/tBlue"
        android:layout_centerInParent="true"
        android:text="Orange"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tGray"
        android:background="#938F8A"
        android:textColor="#F8F5F5"
        android:layout_below="@+id/tOrange"
        android:layout_centerInParent="true"
        android:text="Gray"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tPink"
        android:background="#E91E63"
        android:textColor="#F8F5F5"
        android:layout_below="@+id/tGray"
        android:layout_centerInParent="true"
        android:text="Pink"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>